<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".AddItemActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_update_name"
        android:hint="Tên sách ... "
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edt_background"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/edt_update_author"
        android:hint="Tác giả ... "
        android:layout_marginTop="50dp"
        android:background="@drawable/edt_background"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <EditText
        android:id="@+id/edt_update_price"
        android:hint="Giá bán ... "
        android:layout_marginTop="50dp"
        android:background="@drawable/edt_background"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ngày xuất bản"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_update_time"
            android:hint="Select time ... "
            android:focusable="false"
            android:background="@drawable/edt_background"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </LinearLayout>

    <Spinner
        android:minHeight="60dp"
        android:tooltipText="select something brou"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"
        android:id="@+id/update_ps"
        android:background="@drawable/edt_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_update"
        android:text="Cập nhật thông tin sách"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="80dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

</LinearLayout>


</ScrollView>